generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int     @default(autoincrement()) @id
  fullName     String
  email        String  @unique
  passwordHash String
  avatarURL    String? @default("avatar.png")
  role         String
  totalScore   Int     @default(0)
  IntroducingYourselfScores IntroducingYourself?
}

model IntroducingYourself {
  id             Int    @default(autoincrement()) @id
  refereeScore_1 Int    @default(0)
  refereeScore_2 Int    @default(0)
  refereeScore_3 Int    @default(0)
  refereeScore_4 Int    @default(0)
  student        User   @relation(fields: [studentId], references: [id])
  studentId      Int    @unique
}